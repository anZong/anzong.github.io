// Custom styles.
#sidebar{
  .sidebar-inner{
    padding 20px 0;
  }
  .site-overview{
    margin: 0;
  }
  .categories, .tags{
    border-top: 10px solid #eee;
    .title{
      font-size 16px;
      font-weight: bold;
    }
  }
  .categories{
    .category-list{
      list-style:none;
      .category-list-item{
        text-align left;
        .category-list-count{
          margin-left:10px;
          &::before{
            display:inline-block;
            content: '(';
          }
          &::after{
            display:inline-block;
            content: ')';
          }
        }
      }
    }
  }
}

#comments{
  margin-top 10px;
  background-color: white;
  .vcards, .vpower{
    padding-right 10px;
  }
}
